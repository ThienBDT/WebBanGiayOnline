@model WebBanGiayOnline.Models.EF.Color
@{
    ViewBag.Title = "Chỉnh sửa màu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/color" class="nav-link">Màu sắc sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm màu sắc sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Danh sách màu sắc</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin cập nhật</h3>
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <div class="bs-stepper-content">
                    @using (Html.BeginForm("Edit", "Color", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.ColorId)
                        <!-- your steps content here -->
                        <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tên màu</label>
                                @Html.TextBoxFor(x => x.ColorName, new { @class = "form-control", @placeholder = "Tên màu sắc" })
                                @Html.ValidationMessageFor(x => x.ColorName, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Mã màu</label>
                                @Html.TextBoxFor(x => x.ColorCode, new { @class = "form-control color-picker", @placeholder = "Mã màu", @style = "width: 100px;" })
                                @Html.ValidationMessageFor(x => x.ColorCode, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <a href="/admin/color" class="btn btn-danger">Quay lại</a>
                            </div>
                        </div>
                    }

                </div>
            }

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            };
            finder.popup();
        }
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Coloris({
                el: '.color-picker'
            });
        });
    </script>
    <style>
        .color-picker {
            position: relative;
            z-index: 1; /* Đảm bảo bộ chọn màu hiển thị trên các phần tử khác */
        }

            .color-picker + .coloris {
                margin-top: 1000px;
            }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Coloris({
                el: '.color-picker'
            });
        });
    </script>
}
