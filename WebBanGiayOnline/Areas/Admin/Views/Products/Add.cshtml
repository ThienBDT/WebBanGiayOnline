@model WebBanGiayOnline.Areas.Admin.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Thêm sản phẩm mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/products" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Sản phẩm</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin sản phẩm</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Add", "Products", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#profile" data-toggle="tab">Thông tin sản phẩm</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#image" data-toggle="tab">Hình ảnh</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#detail" data-toggle="tab">Chi tiết</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#seo" data-toggle="tab">Seo</a></li>
                                </ul>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="profile">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Tên sản phẩm</label>
                                            @Html.TextBoxFor(model => model.Product.ProductName, new { @class = "form-control", @placeholder = "Tên sản phẩm" })
                                            @Html.ValidationMessageFor(model => model.Product.ProductName, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Alias</label>
                                            @Html.TextBoxFor(model => model.Product.Alias, new { @class = "form-control", @placeholder = "Alias" })
                                            @Html.ValidationMessageFor(model => model.Product.Alias, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mã sản phẩm</label>
                                            @Html.TextBoxFor(model => model.Product.ProductCode, new { @class = "form-control", @placeholder = "Mã sản phẩm" })
                                            @Html.ValidationMessageFor(model => model.Product.ProductCode, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Danh mục sản phẩm</label>
                                            @Html.DropDownListFor(model => model.Product.ProductCategoryId, ViewBag.ProductCategory as SelectList, "-Chọn danh mục sản phẩm-", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Product.ProductCategoryId, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Đối tượng</label>
                                            @Html.DropDownListFor(model => model.Product.ProductGenderId, ViewBag.ProductGender as SelectList, "-Chọn đối tượng-", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Product.ProductGenderId, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mô tả</label>
                                            @Html.TextBoxFor(model => model.Product.Description, new { @class = "form-control", @placeholder = "Mô tả" })
                                            @Html.ValidationMessageFor(model => model.Product.Description, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Chi tiết</label>
                                            @Html.TextBoxFor(model => model.Product.Detail, new { @class = "form-control", @placeholder = "Chi tiết sản phẩm" })
                                            @Html.ValidationMessageFor(model => model.Product.Description, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="row">
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Số lượng</label>
                                                    @Html.TextBoxFor(model => model.Product.Quantity, new { @class = "form-control", @Value = "1" })
                                                    @Html.ValidationMessageFor(model => model.Product.Quantity, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="demoPrice">Giá</label>
                                                    <input type="text" name="demoPrice" value="0" id="demoPrice" class="form-control auto" data-a-sign=" VND" data-a-dec="," data-a-sep=".">
                                                    @Html.HiddenFor(model => model.Product.Price, new { @class = "form-control", @placeholder = "Giá" })
                                                    @Html.ValidationMessageFor(model => model.Product.Price, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="demoPriceSale">Giá khuyến mãi</label>
                                                    <input type="text" name="demoPriceSale" id="demoPriceSale" value="0" class="form-control auto" data-a-sign=" VND" data-a-dec="," data-a-sep=".">
                                                    @Html.HiddenFor(model => model.Product.PriceSale, new { @class = "form-control", @placeholder = "Khuyến mãi" })
                                                    @Html.ValidationMessageFor(model => model.Product.PriceSale, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(model => model.Product.IsActive, new { @class = "custom-control-input", @id = "customCheckbox2", @checked = "checked" })
                                                        <label for="customCheckbox2" class=" custom-control-label">Hiển thị</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(model => model.Product.IsHot, new { @class = "custom-control-input", @id = "IsHotCheckbox2" })
                                                        <label for="IsHotCheckbox2" class=" custom-control-label">Hot</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(model => model.Product.IsFeature, new { @class = "custom-control-input", @id = "IsFeautureCheckbox" })
                                                        <label for="IsFeautureCheckbox" class=" custom-control-label">Nổi bật</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(model => model.Product.IsSale, new { @class = "custom-control-input", @id = "IsSaleCheckbox" })
                                                        <label for="IsSaleCheckbox" class=" custom-control-label">Khuyến mãi</label>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <!-- /. Thông tin sản phẩm -->
                                    <div class="tab-pane" id="image">
                                        <div class="row">
                                            <div class="col-md-12 text-right">
                                                <input type="button" class="btn btn-primary" id="iTaiAnh" onclick="BrowseServer();" value="Tải ảnh" />
                                            </div>
                                            <div class="col-md-12">
                                                <table class="table table-hover" id="tbAnhSanPham">
                                                    <thead>
                                                        <tr>
                                                            <th class="text-center">STT</th>
                                                            <th class="text-center">Ảnh</th>
                                                            <th class="text-center">Ảnh đại diện</th>
                                                            <th class="text-center"> Thao tác</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="tbHtml">
                                                    </tbody>
                                                </table>
                                                <input type="hidden" id="tCurrentId" value="0" />
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /. Ảnh sản phẩm -->
                                    <div class="tab-pane" id="detail">
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <table class="table" id="ProductDetailId">
                                                    <thead>
                                                        <tr>
                                                            <th>Màu</th>
                                                            <th>Kích cỡ</th>
                                                            <th>Số lượng</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @for (int i = 0; i < Model.ProductDetails.Count; i++)
                                                        {
                                                            <tr>
                                                                <td>@Html.DropDownListFor(x => x.ProductDetails[i].ColorId, (SelectList)ViewBag.Colors, "- Chọn màu -", new { @class = "form-control" })</td>
                                                                <td>@Html.DropDownListFor(x => x.ProductDetails[i].SizeId, (SelectList)ViewBag.Sizes, "- Chọn Size -", new { @class = "form-control" })</td>
                                                                <td>@Html.TextBoxFor(x => x.ProductDetails[i].Stock, new { @class = "form-control" })</td>
                                                                <td><button type="button" class="btn btn-danger" onclick="removeDetail(this)">Xóa</button></td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                                <button type="button" class="btn btn-success" onclick="addDetail()">Thêm</button>
                                            </div>
                                        </div>

                                    </div>
                                    <!-- /. Chi tiết số lượng -->

                                    <div class="tab-pane" id="seo">
                                        <form class="form-horizontal">
                                            <div class="form-group row">
                                                <label for="inputName" class="col-sm-2 col-form-label">Tiêu đề tìm kiếm</label>
                                                <div class="col-sm-10">
                                                    @Html.TextBoxFor(model => model.Product.SeoTitle, new { @class = "form-control", @placehoder = "SeoTitle" })
                                                    @Html.ValidationMessageFor(model => model.Product.SeoTitle, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="inputName" class="col-sm-2 col-form-label">Mô tả tìm kiếm</label>
                                                <div class="col-sm-10">
                                                    @Html.TextBoxFor(model => model.Product.SeoDescription, new { @class = "form-control", @placehoder = "SeoDescription" })
                                                    @Html.ValidationMessageFor(model => model.Product.SeoDescription, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="inputName" class="col-sm-2 col-form-label">Từ khóa tìm kiếm</label>
                                                <div class="col-sm-10">
                                                    @Html.TextBoxFor(model => model.Product.SeoKeyWords, new { @class = "form-control", @placehoder = "SeoKeyWords" })
                                                    @Html.ValidationMessageFor(model => model.Product.SeoKeyWords, null, new { @class = "text-danger" })
                                                </div>
                                            </div>

                                        </form>
                                    </div>
                                    <!-- /.tab-pane -->
                                </div>
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Thêm mới</button>
                            </div>
                        </div> <!-- /.card -->
                    }

                </div>
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    @Scripts.Render("~/bundles/jqueryal")
    <script type="text/javascript">
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
            $('.auto').autoNumeric('int');
            $('#demoPrice').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoPrice').autoNumeric('get');
                $('#Product_Price').val(demoGet);
                $('#Product_Price').autoNumeric('set', demoGet);
            });
            $('#demoPriceSale').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoPriceSale').autoNumeric('get');
                $('#Product_PriceSale').val(demoGet);
                $('#Product_PriceSale').autoNumeric('set', demoGet);
            });          
        });
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                addImageProduct(fileUrl);
            };
            finder.popup();
        }
        function addImageProduct(url) {
            var temp = $('#tCurrentId').val();
            var currentId = parseInt(temp) + 1;
            var str = "";
            if (currentId == 1) {
                str += `<tr id="trow_${currentId}">
                            <td class="text-center">${currentId}</td>
                            <td class="text-center"><img width= "80" src= "${url}" /> <input type= 'hidden' value = "${url}"  name = "Images"/></td>
                            <td class="text-center"><input type= "radio" name = "rDefault" value = "${currentId}" checked= "checked" /></td>
                            <td class="text-center"><a href= "#" data-id="${currentId}" class= "btn btn-sm btn-danger btnXoaAnh">Xóa</a></td>
                            </tr>`;
            }
            else {
                str += `<tr  id="trow_${currentId}">
                            <td class="text-center">${currentId}</td>
                            <td class="text-center"><img width="80" src="${url}" /><input type= 'hidden' value = "${url}"  name = "Images"/></td>
                            <td class="text-center"><input type="radio" name="rDefault" value = "${currentId}"/></td>
                            <td class="text-center"><a href="#" data-id="${currentId}" class="btn btn-sm btn-danger btnXoaAnh ">Xóa</a></td>
                            </tr>`;
            }
            $('#tbHtml').append(str);
            $('#tCurrentId').val(currentId);
            $('#tbHtml tr td a').each(function () {
                $(this).click(function () {
                    var conf = confirm('Bạn có muốn xóa ảnh này không?');
                    if (conf === true) {
                        var _id = $(this).data('id');
                        //$('#trow_' + _id).remove();
                        $('#trow_' + _id).fadeTo('fast', 1, function () {
                            $(this).slideUp('fast', function () { $(this).remove(); });
                        });
                        var temp = $('#tCurrentId').val();
                        var currentId = parseInt(temp) - 1;
                        $('#tCurrentId').val(currentId);
                    }
                });
            });
        }
        function addDetail() {
                var row = `<tr>
                                <td>@Html.Raw(Html.DropDownList("ProductDetails[INDEX].ColorId", (SelectList)ViewBag.Colors, "- Chọn màu -", new { @class = "form-control" }))</td>
                                <td>@Html.Raw(Html.DropDownList("ProductDetails[INDEX].SizeId", (SelectList)ViewBag.Sizes, "- Chọn Size -", new { @class = "form-control" }))</td>
                                <td><input class="form-control" name="ProductDetails[INDEX].Stock" type="text" value="0" /></td>
                                <td><button type="button" class="btn btn-danger" onclick="removeDetail(this)">Xóa</button></td>
                            </tr>`;
                var table = $('#ProductDetailId tbody');
                var index = table.find('tr').length;
                table.append(row.replace(/INDEX/g, index));
            }

            function removeDetail(button) {
                $(button).closest('tr').remove();
            }

    </script>
}




